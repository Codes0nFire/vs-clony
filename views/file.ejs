<!DOCTYPE html>
<html>
  <head>
    <title>Vs Code</title>
    <link rel="stylesheet" href="../stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="main">
      <div class="left">
        <div class="folders">
          <h4>Some Folder</h4>
          <div class="foldericons">
            <i class="ri-file-line"></i>
            <i class="ri-folder-add-line"></i>
            <a style="text-decoration: none" href="/">
              <i class="ri-refresh-line"></i
            ></a>
            <i class="ri-file-copy-line"></i>
          </div>
        </div>

        <div class="form fileform">
          <form action="/filebanao">
            <input
              type="text"
              name="filekanaam"
              placeholder="enter file name"
            />
          </form>
        </div>

        <div class="form folderform">
          <form action="/folderbanao">
            <input
              type="text"
              name="folderkanaam"
              placeholder="enter folder name"
            />
          </form>
        </div>

        <div class="files">
          <% data.forEach(function(eachfileorfolder){ %>

          <div class="file">
            <h4>
              <% if(eachfileorfolder.isDirectory()){ %>
              <i class="ri-folder-fill"></i> <%= eachfileorfolder.name %> <% }
              else{ %>
              <a class="next" href="/write/<%=eachfileorfolder.name%>">
                <i class="ri-file-fill"></i> <%= eachfileorfolder.name %></a
              >
              <% } %>
            </h4>
          </div>

          <% }) %>
        </div>
      </div>
      <div class="right">
        <nav>
          <h1><%= filename %></h1>

          <a class="ri-close-circle-fill" href="/"></a>
        </nav>

        <form action="/save/<%=filename %>" method="post">
          <textarea class="text" name="text"><%= textdata %></textarea>

          <input class="submit" type="submit" value="Save File" />
        </form>
      </div>

      <div class="overlaymain">
        <div class="popup">
          <form action="">
            <input type="text" placeholder="Rename" />
          </form>
        </div>
      </div>
    </div>

    <script src="../javascripts/script.js"></script>
  </body>
</html>
